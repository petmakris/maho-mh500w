    <!-- Jog Speed -->
    <label>
        <text>"Jog Speed:"</text>
    </label>
    <bar>
        <halpin>"jog-speed"</halpin>
        <min_>0</min_>
        <max_>1000</max_>
    </bar>

</pyvcp>